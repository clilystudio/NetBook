<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@id/reader_page_pay"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center"
              android:orientation="vertical"
              android:visibility="gone">

    <TextView
        android:id="@id/reader_page_pay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/text_size_34"/>

    <LinearLayout
        android:id="@id/reader_page_pay_buy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_60"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="需要支付 "
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@id/reader_page_pay_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\ 10"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 追书币"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/text_size_15"/>
        </LinearLayout>

        <CheckBox
            android:id="@id/reader_page_pay_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"
            android:background="@null"
            android:button="@drawable/shelf_select_checkbox"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingLeft="@dimen/dp_8"
            android:text="不再提醒，下章时自动购买"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_size_12"/>

        <Button
            android:id="@id/reader_page_pay_btn"
            android:layout_width="160.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/common_btn_red_bg"
            android:text="购买，继续阅读"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_14"/>

        <Button
            android:id="@id/reader_page_change_btn"
            android:layout_width="160.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/common_btn_green_bg"
            android:text="选择其他来源"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_14"/>
    </LinearLayout>

    <LinearLayout
        android:id="@id/reader_page_pay_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_100"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本章节需要登录后继续阅读"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_size_15"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"
            android:background="@null"
            android:button="@drawable/shelf_select_checkbox"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingLeft="@dimen/dp_8"
            android:text="填充高度"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_size_12"
            android:visibility="invisible"/>

        <Button
            android:id="@id/reader_page_pay_btn_login"
            android:layout_width="160.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/common_btn_red_bg"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_14"/>

        <Button
            android:layout_width="160.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/common_btn_green_bg"
            android:text="填充高度"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_14"
            android:visibility="invisible"/>
    </LinearLayout>
</LinearLayout>