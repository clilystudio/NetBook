<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <WebView android:id="@id/wv_web_page" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@id/browser_nav" android:layerType="software" />
    <RelativeLayout android:id="@id/browser_nav" android:background="@color/bg_reader_ab" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <ImageView android:id="@id/btn_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_nav_back" android:layout_alignParentLeft="true" android:contentDescription="@string/nav_back" />
        <ImageView android:id="@id/btn_forward" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_nav_forward" android:layout_toRightOf="@id/btn_back" android:contentDescription="@string/nav_forward" />
        <ImageView android:id="@id/btn_reload" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_new_reload" android:layout_alignParentRight="true" android:contentDescription="@string/nav_reload" />
    </RelativeLayout>
    <ProgressBar android:id="@id/pb_loading" android:visibility="gone" android:layout_centerInParent="true" style="@style/Loading" />
</RelativeLayout>