<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="?feedAreaDialogBg"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="30.0dip">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:src="@drawable/feed_dialog_intro_img"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:gravity="center"
        android:text="已移入养肥区"
        android:textSize="24.0sp"/>

    <TextView
        android:layout_width="220.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.2"
        android:text="这本小说已经移入养肥区，你可以在书架找到它"
        android:textColor="?android:textColorSecondary"
        android:textSize="@dimen/text_size_14"/>

    <Button
        android:id="@id/dialog_feed_intro_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/common_green_bg"
        android:text="@string/ok_user"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_17"/>
</LinearLayout>