<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:scrollbars="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:textColor="?android:textColorSecondary"
            android:gravity="left|center"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_48"
            android:text="请选择充值金额"/>

        <com.clilystudio.app.netbook.widget.ScrollGridView
            android:id="@+id/pay_grid_view"
            android:paddingTop="@dimen/dp_15"
            android:scrollbars="none"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="@color/transparent"
            android:horizontalSpacing="@dimen/dp_16"
            android:verticalSpacing="@dimen/dp_15"
            android:numColumns="2"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="?android:textColorSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:text="@string/charge_declare_title"/>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8">

                <TableRow android:layout_marginTop="@dimen/dp_8">

                    <TextView
                        android:textColor="?android:textColorSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1."/>

                    <TextView
                        android:textColor="?android:textColorSecondary"
                        android:id="@+id/charge_declare_desc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </TableRow>

                <TableRow android:layout_marginTop="@dimen/dp_8">

                    <TextView
                        android:textColor="?android:textColorSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2."/>

                    <TextView
                        android:textColor="?android:textColorSecondary"
                        android:id="@+id/charge_declare_desc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </TableRow>

                <TableRow
                    android:id="@+id/charge_declare_desc3_row"
                    android:layout_marginTop="@dimen/dp_8">

                    <TextView
                        android:textColor="?android:textColorSecondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3."/>

                    <TextView
                        android:textColor="?android:textColorSecondary"
                        android:id="@+id/charge_declare_desc3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>