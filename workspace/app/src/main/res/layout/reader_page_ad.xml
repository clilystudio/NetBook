<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/reader_ad_view"
                android:background="@drawable/reader_ad_bg"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_60"
                xmlns:android="http://schemas.android.com/apk/res/android">

    <com.clilystudio.app.netbook.ui.SmartImageView
        android:id="@+id/reader_ad_cover"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_8"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <Button
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/reader_ad_delete"
        android:background="@drawable/reader_remove_ad_bg"
        android:visibility="gone"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_8"
        android:text="去除广告"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:gravity="left|center"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_toLeftOf="@id/reader_ad_delete"
        android:layout_toRightOf="@id/reader_ad_cover"
        android:layout_centerVertical="true">

        <TextView
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/light_text_color"
            android:id="@+id/reader_ad_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>

        <TextView
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/light_text_secondary"
            android:id="@+id/reader_ad_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:singleLine="true"/>
    </LinearLayout>
</RelativeLayout>