<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:paddingTop="@dimen/dp_16">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@drawable/ic_game_gift_info"/>

        <TextView
            android:id="@id/game_gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="热血传奇大礼包"
            android:textColor="#ff222222"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:id="@id/game_gift_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/game_gift_name"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/icon"
            android:text="剩余110个"
            android:textColor="#ff777777"
            android:textSize="@dimen/text_size_12"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:text="礼包"
        android:textColor="#ff777777"
        android:textSize="@dimen/text_size_14"/>

    <TextView
        android:id="@id/game_gift_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:text="屠龙刀*1，裁决之杖*2，强效太阳水*100，金币10000000"
        android:textColor="#ff222222"
        android:textSize="@dimen/text_size_14"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:text="有效期"
        android:textColor="#ff777777"
        android:textSize="@dimen/text_size_14"/>

    <TextView
        android:id="@id/game_gift_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:text="屠龙刀*1，裁决之杖*2，强效太阳水*100，金币10000000"
        android:textColor="#ff222222"
        android:textSize="@dimen/text_size_14"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:text="使用方法"
        android:textColor="#ff777777"
        android:textSize="@dimen/text_size_14"/>

    <TextView
        android:id="@id/game_gift_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:text="屠龙刀*1，裁决之杖*2，强效太阳水*100，金币10000000"
        android:textColor="#ff222222"
        android:textSize="@dimen/text_size_14"/>

    <Button
        android:id="@id/game_gift_btn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@android:color/holo_red_light"
        android:text="领取"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_17"/>
</LinearLayout>