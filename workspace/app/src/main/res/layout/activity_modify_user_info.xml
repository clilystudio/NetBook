<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="?backgroundPressed"
              android:orientation="vertical"
              android:paddingTop="33.0dip">

    <include layout="@layout/horizontal_divider"/>

    <LinearLayout
        android:id="@id/portrait_section"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?backgroundSelector"
        android:paddingBottom="8.0dip"
        android:paddingLeft="16.0dip"
        android:paddingRight="16.0dip"
        android:paddingTop="8.0dip">

        <TextView
            style="@style/LargeText"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:text="修改头像"/>

        <com.clilystudio.netbook.widget.CircularSmartImageView
            android:id="@id/portrait"
            android:layout_width="43.0dip"
            android:layout_height="43.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8.0dip"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ios_arrow"/>
    </LinearLayout>

    <include
        layout="@layout/horizontal_divider"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="16.0dip"/>

    <LinearLayout
        android:id="@id/name_section"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?backgroundSelector"
        android:padding="16.0dip">

        <TextView
            style="@style/LargeText"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:text="修改昵称"/>

        <TextView
            android:id="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8.0dip"
            android:textColor="?android:textColorSecondary"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ios_arrow"/>
    </LinearLayout>

    <include
        layout="@layout/horizontal_divider"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="16.0dip"/>

    <LinearLayout
        android:id="@id/gender_section"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?backgroundSelector"
        android:padding="16.0dip">

        <TextView
            style="@style/LargeText"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:text="修改性别"/>

        <TextView
            android:id="@id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8.0dip"
            android:textColor="?android:textColorSecondary"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ios_arrow"/>
    </LinearLayout>

    <include layout="@layout/horizontal_divider"/>
</LinearLayout>