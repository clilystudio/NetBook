<?xml version="1.0" encoding="utf-8"?>
<com.clilystudio.app.netbook.reader.random.ReaderRandomActionBar android:orientation="horizontal"
                                                              android:layout_width="fill_parent"
                                                              android:layout_height="wrap_content"
                                                              android:baselineAligned="false"
                                                              xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:background="@color/reader_operation_bottom_bg_nor"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/my_ab_height"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:background="@drawable/bg_darker"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/reader_random_ab_back"
                android:background="@drawable/bg_darker"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/ab_back"/>

            <TextView
                android:textSize="@dimen/text_size_18"
                android:textColor="#ffffffff"
                android:layout_gravity="center"
                android:id="@+id/reader_random_ab_title"
                android:paddingLeft="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>
    </RelativeLayout>
</com.clilystudio.app.netbook.reader.random.ReaderRandomActionBar>