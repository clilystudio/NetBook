<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="?android:windowBackground"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="?backgroundNormal"
        android:gravity="center_vertical"
        android:text="请选择你的性别"
        android:textColor="#ffc90000"
        android:textSize="@dimen/text_size_20"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1.2999878dip"
        android:background="#ffc90000"/>

    <TextView
        android:id="@id/gender_male"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_60"
        android:background="?backgroundSelector"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:text="男生"
        android:textColor="?android:textColor"
        android:textSize="@dimen/text_size_18"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.70000005dip"
        android:background="?lineColor"/>

    <TextView
        android:id="@id/gender_female"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_60"
        android:background="?backgroundSelector"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:text="女生"
        android:textColor="?android:textColor"
        android:textSize="@dimen/text_size_18"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.70000005dip"
        android:background="?lineColor"/>
</LinearLayout>