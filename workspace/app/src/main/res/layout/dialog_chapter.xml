<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fffafafa">

    <TextView
        android:id="@id/dialog_chapter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/dp_12"
        android:paddingTop="@dimen/dp_12"
        android:textColor="@color/sub_text"
        android:textSize="@dimen/read_toc_title_text"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_chapter_title"
        android:background="@drawable/toc_list_divider"/>

    <ListView
        android:id="@id/dialog_chapter_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_chapter_title"
        android:divider="@drawable/toc_list_divider"
        android:dividerHeight="1.0px"
        android:fadeScrollbars="false"
        android:footerDividersEnabled="true"/>
</RelativeLayout>