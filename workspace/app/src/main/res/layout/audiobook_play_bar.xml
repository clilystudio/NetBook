<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom"
              android:background="?android:windowBackground"
              android:orientation="vertical">

    <SeekBar
        android:id="@id/audiobook_seekbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:maxHeight="@dimen/dp_4"
        android:minHeight="@dimen/dp_4"
        android:padding="0.0dip"
        android:progressDrawable="@drawable/audiobook_play_progressbar"
        android:thumb="@drawable/audiobook_play_point"/>

    <FrameLayout
        android:id="@id/play_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_68">

        <TextView
            android:id="@id/audiobook_playtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left|center"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_9"
            android:text="00:00"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:id="@id/audiobook_totaltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right|center"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_9"
            android:text="00:00"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_size_12"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@id/audiobook_playpre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:src="@drawable/audiobook_pre_selector"/>

            <ImageButton
                android:id="@id/audiobook_play_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_24"
                android:background="@null"
                android:src="@drawable/audiobook_play_selector"/>

            <ImageButton
                android:id="@id/audiobook_playnext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:src="@drawable/audiobook_next_selector"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>