<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/bookshelf_height">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <com.clilystudio.netbook.widget.CoverView xmlns:apps="http://schemas.android.com/apk/res-auto"
                                                  android:id="@id/cover"
                                                  style="@style/CoverView"
                                                  android:layout_gravity="center_vertical"
                                                  android:layout_marginRight="@dimen/dp_15"
                                                  apps:cover="@drawable/home_shelf_txt_icon"/>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@id/title"
                style="@style/ShelfMainText"/>

            <TextView
                android:id="@id/desc"
                style="@style/ShelfSubText"/>
        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@id/checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_24"
        android:button="@drawable/shelf_select_checkbox"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone"/>

    <ImageView
        android:id="@id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/label_book_top"
        android:visibility="gone"/>
</RelativeLayout>