<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@id/dialog_custom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="24.0dip"
        android:paddingRight="24.0dip"
        android:paddingTop="24.0dip"
        android:text="Title"
        android:textColor="#ff352828"
        android:textSize="22.0sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <TextView
        android:id="@id/dialog_custom_content"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:lineSpacingMultiplier="1.3"
        android:paddingLeft="24.0dip"
        android:paddingRight="24.0dip"
        android:paddingTop="24.0dip"
        android:text="Content"
        android:textColor="#ff544f49"
        android:textSize="14.0sp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@id/dialog_custom_alongside_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_marginRight="16.0dip"
        android:orientation="horizontal"
        android:paddingBottom="16.0dip"
        android:paddingTop="24.0dip">

        <Button
            android:id="@android:id/button2"
            android:layout_width="wrap_content"
            android:layout_height="36.0dip"
            android:background="@drawable/bg_confirm_btn"
            android:gravity="center"
            android:minWidth="88.0dip"
            android:padding="8.0dip"
            android:textSize="14.0sp"
            android:visibility="gone"/>

        <View
            android:id="@+id/button_separate"
            android:layout_width="1.0px"
            android:layout_height="16.0dip"
            android:layout_gravity="center"
            android:background="#ffe3e3e3"
            android:visibility="gone"/>

        <Button
            android:id="@android:id/button1"
            android:layout_width="wrap_content"
            android:layout_height="36.0dip"
            android:background="@drawable/bg_confirm_btn"
            android:gravity="center"
            android:minWidth="88.0dip"
            android:padding="8.0dip"
            android:textColor="#ffb93221"
            android:textSize="14.0sp"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@id/dialog_custom_stacked_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_marginRight="16.0dip"
        android:orientation="vertical"
        android:paddingBottom="16.0dip"
        android:paddingTop="24.0dip"
        android:visibility="gone">

        <Button
            android:id="@id/dialog_custom_confirm_stacked"
            android:layout_width="wrap_content"
            android:layout_height="36.0dip"
            android:layout_gravity="right|center"
            android:background="@android:color/transparent"
            android:gravity="right|center"
            android:padding="8.0dip"
            android:textSize="14.0sp"
            android:visibility="gone"/>

        <Button
            android:id="@id/dialog_custom_cancel_stacked"
            android:layout_width="wrap_content"
            android:layout_height="36.0dip"
            android:layout_gravity="right|center"
            android:background="@android:color/transparent"
            android:gravity="right|center"
            android:padding="8.0dip"
            android:textSize="14.0sp"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>