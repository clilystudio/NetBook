<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@id/splash_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@id/splash_ad_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottom_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@id/splash_ad_img"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@id/bottom_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/splash_bottom_bg">

        <TextView
            android:id="@id/splash_ad_skip"
            android:layout_width="40.0dip"
            android:layout_height="24.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/splash_skip_bg"
            android:gravity="center"
            android:text="跳过"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_13"/>
    </RelativeLayout>

    <ImageView
        android:id="@id/splash_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_20"/>
</RelativeLayout>