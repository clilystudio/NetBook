<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:background="?android:windowBackground"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/hot_flag"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:text="正在扫描"
            style="@style/HomeListItemLabelV3"/>

        <ProgressBar
            android:layout_gravity="center_vertical"
            android:id="@+id/pb_loading"
            android:visibility="gone"
            style="@style/TxtFileSpinner"/>

        <View
            android:layout_width="0.0dip"
            android:layout_height="1.0dip"
            android:layout_weight="1.0"/>

        <ImageView
            android:layout_gravity="center_vertical"
            android:paddingRight="16.0dip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ios_arrow"/>
    </LinearLayout>

    <include layout="@layout/horizontal_divider"/>

    <ListView
        android:id="@+id/list"
        android:background="?backgroundPressed"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        style="@style/DividerListView.ScanTxt"/>

    <TextView
        android:textSize="15.0sp"
        android:textColor="?android:textColorTertiary"
        android:gravity="center"
        android:id="@+id/empty"
        android:background="?backgroundPressed"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:text="啊哦，没有扫描到txt文件哦"
        android:layout_weight="1.0"/>

    <include layout="@layout/horizontal_divider"/>

    <FrameLayout
        android:background="?backgroundPressed"
        android:padding="20.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:textSize="16.0sp"
            android:textColor="#ffffffff"
            android:id="@+id/import_book"
            android:background="@drawable/green_round_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="立即导入"
            android:onClick="onImport"/>
    </FrameLayout>
</LinearLayout>