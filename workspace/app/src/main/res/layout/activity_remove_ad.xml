<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="?backgroundPressed">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/SettingLabel"
            android:text="付费去广告"/>

        <android.support.v7.widget.RecyclerView
            android:id="@id/recycler_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:windowBackground"
            android:scrollbars="vertical"/>

        <TextView
            android:id="@id/txt_share_remove"
            style="@style/SettingLabel"
            android:text="免费去广告"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@id/rl_share_remove"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_56"
            android:background="?android:windowBackground"
            android:minHeight="@dimen/dp_56"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:visibility="gone">

            <TextView
                android:id="@id/vip_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="不想花钱?"
                android:textSize="@dimen/text_size_15"/>

            <Button
                android:id="@id/btn_share_remove_ad"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/common_btn_red_bg"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:text="分享免广告"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_12"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>