<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@id/micro_game_item_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?backgroundSelector">

    <com.clilystudio.netbook.widget.SmartImageView
        android:id="@id/micro_game_item_icon"
        android:layout_width="60.0dip"
        android:layout_height="60.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toLeftOf="@id/micro_game_item_play"
        android:layout_toRightOf="@id/micro_game_item_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@id/micro_game_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="?android:textColor"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:id="@id/micro_game_item_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:id="@id/micro_game_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.0dip"
            android:drawableLeft="@drawable/ic_follower_count"
            android:drawablePadding="@dimen/dp_3"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="?android:textColorSecondary"
            android:textSize="@dimen/text_size_10"/>
    </LinearLayout>

    <Button
        android:id="@id/micro_game_item_play"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_16"
        android:background="@drawable/red_round_button"
        android:text="继续"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_12"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_alignParentBottom="true"
        android:background="?lineColor"/>
</RelativeLayout>