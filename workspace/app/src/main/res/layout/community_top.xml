<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="?colorPrimary"
                android:orientation="horizontal">

    <RelativeLayout
        android:id="@id/community_top_left"
        style="@style/Post_List_PopupWindow"
        android:layout_toLeftOf="@id/community_top_line"
        android:gravity="center_horizontal">

        <TextView
            android:id="@id/community_top_left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"
            android:textColor="@color/book_topic_top_text"
            android:textSize="@dimen/book_post_pop_text"/>

        <ImageView
            android:id="@id/community_top_left_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_toRightOf="@id/community_top_left_title"
            android:src="@drawable/book_topic_top_arrow_down"/>
    </RelativeLayout>

    <View
        android:id="@id/community_top_line"
        android:layout_width="1.0px"
        android:layout_height="16.0dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#ffbebebe"
        android:visibility="invisible"/>

    <RelativeLayout
        android:id="@id/community_top_right"
        style="@style/Post_List_PopupWindow"
        android:layout_toRightOf="@id/community_top_line"
        android:gravity="center_horizontal">

        <TextView
            android:id="@id/community_top_right_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="默认排序"
            android:textColor="@color/book_topic_top_text"
            android:textSize="@dimen/book_post_pop_text"/>

        <ImageView
            android:id="@id/community_top_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip"
            android:layout_toRightOf="@id/community_top_right_title"
            android:src="@drawable/book_topic_top_arrow_down"/>
    </RelativeLayout>
</RelativeLayout>