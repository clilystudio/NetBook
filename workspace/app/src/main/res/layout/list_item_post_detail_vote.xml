<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="?android:windowBackground"
              android:orientation="vertical"
              android:paddingTop="@dimen/post_detail_vote_item_top">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <ImageView
                android:id="@id/post_detail_vote_item_index"
                android:layout_width="@dimen/topic_detail_divider_left_gap"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingTop="@dimen/dp_3"
                android:src="@drawable/post_detail_comment_vote_item_1"/>

            <TextView
                android:id="@id/post_detail_vote_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="22.0dip"
                android:gravity="bottom"
                android:lineSpacingMultiplier="1.3"
                android:paddingTop="2.0dip"
                android:text="投票内容"
                android:textColor="?android:textColorSecondary"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>

        <ImageView
            android:id="@id/post_detail_vote_item_vote"
            android:layout_width="@dimen/post_detail_vote_img_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="top"
            android:paddingBottom="@dimen/dp_3"
            android:src="@drawable/post_detail_do_vote"/>
    </LinearLayout>

    <LinearLayout
        android:id="@id/post_detail_vote_item_vote_full_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical">

        <LinearLayout
            android:id="@id/post_detail_vote_item_vote_result_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_marginLeft="@dimen/topic_detail_divider_left_gap"
            android:layout_marginRight="22.0dip"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@id/post_detail_vote_item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0票"
                android:textColor="?android:textColorTertiary"
                android:textSize="@dimen/text_size_11"/>

            <ProgressBar
                android:id="@id/post_detail_vote_item_percent_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0.0dip"
                android:layout_height="2.0dip"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_weight="1.0"
                android:max="100"
                android:progressDrawable="@drawable/vote_item_progressbar_bg"/>

            <TextView
                android:id="@id/post_detail_vote_item_percent_value"
                android:layout_width="@dimen/dp_35"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0%"
                android:textColor="?android:textColorTertiary"
                android:textSize="@dimen/text_size_11"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@id/divider"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="@dimen/topic_detail_divider_left_gap"
        android:background="?lineColor"/>
</LinearLayout>