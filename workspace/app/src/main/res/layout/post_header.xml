<?xml version="1.0" encoding="utf-8"?>
<merge android:orientation="vertical"
       android:background="?android:windowBackground"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16">

        <RelativeLayout
            android:id="@+id/avatar_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.clilystudio.app.netbook.ui.CircularSmartImageView
                android:id="@+id/avatar"
                android:src="@drawable/avatar_default"
                android:layout_alignParentLeft="true"
                style="@style/Cover_Book_Post_Detail_Author"/>

            <ImageView
                android:id="@+id/avatar_verify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/list_item_post_avatar_verify_margin"
                android:layout_marginTop="@dimen/list_item_post_avatar_verify_margin"
                android:src="@drawable/ic_list_item_post_user_verify"
                android:layout_toRightOf="@id/avatar"
                android:layout_below="@id/avatar"/>
        </RelativeLayout>

        <RelativeLayout
            android:paddingTop="2.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_toRightOf="@id/avatar_layout"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/author_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="@dimen/text_size_14"
                    android:textColor="#ff795e3c"
                    android:ellipsize="end"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户名"
                    android:maxEms="10"
                    android:singleLine="true"/>

                <TextView
                    android:textSize="@dimen/text_size_14"
                    android:textColor="#ff795e3c"
                    android:id="@+id/lv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:text="lv.1"/>
            </LinearLayout>

            <TextView
                android:textSize="@dimen/text_size_12"
                android:textColor="?android:textColorTertiary"
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="0分钟前"
                android:layout_below="@id/author_layout"/>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:textSize="@dimen/text_size_18"
        android:textColor="?android:textColor"
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_16"
        android:text="帖子标题"/>

    <com.clilystudio.app.netbook.widget.LinkifyTextView
        android:textSize="@dimen/text_size_16"
        android:textColor="?android:textColorSecondary"
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_16"
        android:text="帖子内容"
        android:lineSpacingMultiplier="1.2"/>

    <include layout="@layout/book_review_rating"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16">

        <com.clilystudio.app.netbook.widget.PostAgreeView
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/post_agree_view"
            android:background="@drawable/bg_agree_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/post_detail_agree"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:id="@+id/agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同感"
                android:drawableLeft="@drawable/ic_post_agree"
                android:drawablePadding="4.0dip"/>
        </com.clilystudio.app.netbook.widget.PostAgreeView>

        <ImageView
            android:id="@+id/post_detail_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@drawable/post_detail_share"
            android:layout_toLeftOf="@id/post_detail_more"
            android:contentDescription="@string/accessible_share"/>

        <ImageView
            android:id="@+id/post_detail_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/post_detail_more"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/accessible_menu"/>
    </RelativeLayout>

    <View
        android:background="?lineColor"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"/>

    <include layout="@layout/book_topic_vote"/>

    <include layout="@layout/book_review_useful"/>
</merge>