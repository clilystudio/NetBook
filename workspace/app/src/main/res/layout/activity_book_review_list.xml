<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="?android:windowBackground">

    <LinearLayout
        android:id="@id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?colorPrimary"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@id/book_review_top_left"
                style="@style/Post_List_PopupWindow"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@id/book_review_top_left_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部"
                    android:textColor="@color/book_topic_top_text"
                    android:textSize="@dimen/book_post_pop_text"/>

                <ImageView
                    android:id="@id/book_review_top_left_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:layout_toRightOf="@id/book_review_top_left_title"
                    android:src="@drawable/book_topic_top_arrow_down"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/book_review_top_mid"
                style="@style/Post_List_PopupWindow"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@id/book_review_top_mid_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全部类型"
                    android:textColor="@color/book_topic_top_text"
                    android:textSize="@dimen/book_post_pop_text"/>

                <ImageView
                    android:id="@id/book_review_top_mid_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:layout_toRightOf="@id/book_review_top_mid_title"
                    android:src="@drawable/book_topic_top_arrow_down"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/book_review_top_right"
                style="@style/Post_List_PopupWindow"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@id/book_review_top_right_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="默认排序"
                    android:textColor="@color/book_topic_top_text"
                    android:textSize="@dimen/book_post_pop_text"/>

                <ImageView
                    android:id="@id/book_review_top_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5.0dip"
                    android:layout_toRightOf="@id/book_review_top_right_title"
                    android:src="@drawable/book_topic_top_arrow_down"/>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="?lineColor"/>

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@id/ptr_list"
            style="@style/DividerListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    </LinearLayout>

    <TextView
        android:id="@id/empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/empty_view_text"
        android:textSize="@dimen/text_size_16"/>

    <ProgressBar
        android:id="@id/pb_loading"
        style="@style/Loading"
        android:layout_centerInParent="true"/>
</RelativeLayout>