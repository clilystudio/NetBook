<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:apps="http://schemas.android.com/apk/res-auto"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_game_layout_recommend"
              android:minHeight="206.0dip"
              android:orientation="horizontal"
              android:paddingTop="6.0dip">

    <View
        android:layout_width="0.0dip"
        android:layout_height="1.0dip"
        android:layout_weight="1.0"/>

    <LinearLayout
        android:layout_width="144.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="31.599976dip"
        android:paddingTop="31.599976dip">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40.0dip"
                android:src="@drawable/ic_game_layout_recommend_quote"/>
        </FrameLayout>

        <TextView
            android:id="@id/desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4.0dip"
            android:layout_marginTop="15.599976dip"
            android:lineSpacingMultiplier="1.8"
            android:textColor="#ffffffff"
            android:textSize="12.0sp"/>
    </LinearLayout>

    <View
        android:layout_width="0.0dip"
        android:layout_height="1.0dip"
        android:layout_weight="1.0"/>

    <LinearLayout
        android:layout_width="120.0dip"
        android:layout_height="180.0dip"
        android:layout_gravity="center"
        android:background="?android:windowBackground"
        android:gravity="center"
        android:orientation="vertical">

        <com.clilystudio.netbook.widget.SmartImageView
            android:id="@id/icon"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3.0dip"
            android:layout_marginRight="3.0dip"
            android:layout_marginTop="5.0dip"
            android:singleLine="true"
            android:textColor="?android:textColor"
            android:textSize="15.0dip"/>

        <TextView
            android:id="@id/playingCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5.0dip"
            android:textColor="?android:textColorSecondary"
            android:textSize="12.0dip"/>

        <com.clilystudio.netbook.widget.GameLayoutDownloadButton
            android:id="@id/download"
            android:layout_width="80.0dip"
            android:layout_height="24.0dip"
            android:layout_gravity="center"
            android:layout_marginTop="8.0dip"
            android:text="下载"
            android:textColor="@android:color/white"
            android:textSize="12.0sp"
            apps:where="promotion"/>
    </LinearLayout>

    <View
        android:layout_width="0.0dip"
        android:layout_height="1.0dip"
        android:layout_weight="1.0"/>
</LinearLayout>