<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fitsSystemWindows="false">

    <LinearLayout
        android:id="@id/ll_activity_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16.0dip"
        android:layout_marginRight="16.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@id/fab_activty"
            android:layout_width="54.0dip"
            android:layout_height="54.0dip"
            android:contentDescription="展开选项"
            android:src="@drawable/ic_fab_default"
            app:backgroundTint="@android:color/holo_red_light"
            app:elevation="0.0dip"/>
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_tweet_container"
        android:layout_width="wrap_content"
        android:layout_height="50.0dip"
        android:layout_above="@id/ll_activity_container"
        android:layout_alignParentRight="true"
        android:layout_marginRight="19.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12.0dip"
            android:background="@drawable/float_menu_bg_circle"
            android:padding="4.0dip"
            android:text="动态"
            android:textColor="#ffffffff"
            android:textSize="12.0sp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@id/fab_tweet"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:contentDescription="动态"
            android:src="@drawable/ic_activity"
            app:backgroundTint="@android:color/holo_red_light"
            app:elevation="0.0dip"/>
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_artics_container"
        android:layout_width="wrap_content"
        android:layout_height="50.0dip"
        android:layout_above="@id/ll_tweet_container"
        android:layout_alignParentRight="true"
        android:layout_marginRight="19.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12.0dip"
            android:background="@drawable/float_menu_bg_circle"
            android:padding="4.0dip"
            android:text="长文章"
            android:textColor="#ffffffff"
            android:textSize="12.0sp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@id/fab_article"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:contentDescription="发表长文章"
            android:src="@drawable/ic_assignment_white_36dp"
            app:backgroundTint="@android:color/holo_red_light"
            app:elevation="0.0dip"/>
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_comment_container"
        android:layout_width="wrap_content"
        android:layout_height="50.0dip"
        android:layout_above="@id/ll_artics_container"
        android:layout_alignParentRight="true"
        android:layout_marginRight="19.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12.0dip"
            android:background="@drawable/float_menu_bg_circle"
            android:padding="4.0dip"
            android:text="书评"
            android:textColor="#ffffffff"
            android:textSize="12.0sp"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@id/fab_comment"
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:contentDescription="书评"
            android:src="@drawable/ic_comment"
            app:backgroundTint="@android:color/holo_red_light"
            app:elevation="0.0dip"/>
    </LinearLayout>
</RelativeLayout>