<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
              android:background="?backgroundPressed"
              android:paddingTop="30.0dip"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/horizontal_divider"/>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/unimportant_section"
        android:background="?backgroundSelector"
        android:paddingRight="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="?android:listPreferredItemHeight">

        <ImageView
            android:layout_width="@dimen/shelf_divider_left_gap"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_notification_alert"
            android:scaleType="center"/>

        <TextView
            android:textColor="?android:textColorSecondary"
            android:layout_gravity="center_vertical"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:text="通知"
            android:layout_weight="1.0"
            style="@style/LargeText"/>

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/red_dot"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/notification_red_dot"/>
    </LinearLayout>

    <include layout="@layout/horizontal_divider"/>
</LinearLayout>