<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="?backgroundSelector"
                android:paddingLeft="16.0dip"
                android:paddingTop="16.0dip"
                android:paddingRight="20.0dip"
                android:paddingBottom="16.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                xmlns:android="http://schemas.android.com/apk/res/android">

    <com.clilystudio.app.netbook.widget.CoverView
        android:id="@+id/add_review_cover"
        style="@style/CoverView"/>

    <TextView
        android:ellipsize="end"
        android:id="@+id/add_review_title"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="5.0dip"
        android:singleLine="true"
        android:layout_toLeftOf="@id/add_review_selected"
        android:layout_toRightOf="@id/add_review_cover"
        android:layout_centerVertical="true"
        style="@style/LargeText"/>

    <ImageView
        android:id="@+id/add_review_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gray_tick_circle"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>