<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_gravity="top"
        android:background="#ffb3b3b3"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="16.0dip"
        android:orientation="horizontal"
        android:paddingRight="40.0dip"
        android:paddingTop="8.0dip">

        <ImageView
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_marginRight="15.0dip"/>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/content"
                style="@style/LargeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="喜欢「追书神器」吗？"
                android:textSize="18.0sp"/>

            <TextView
                style="@style/LargeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8.0dip"
                android:text="邀请好友来使用吧"
                android:textSize="15.0sp"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="30.0dip"
        android:layout_height="30.0dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20.0dip"
        android:layout_marginTop="16.0dip"
        android:padding="7.0dip"
        android:src="@drawable/ic_action_cancel"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:orientation="horizontal">

        <Button
            android:id="@+id/negative"
            style="@style/MediumText"
            android:layout_width="wrap_content"
            android:layout_height="35.0dip"
            android:background="@drawable/bg_confirm_btn"
            android:minWidth="87.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:text="不推荐给朋友"
            android:textColor="@color/font_red"/>

        <Button
            android:id="@+id/positive"
            style="@style/MediumText"
            android:layout_width="wrap_content"
            android:layout_height="35.0dip"
            android:layout_marginLeft="8.0dip"
            android:background="@drawable/common_btn_red_bg"
            android:minWidth="87.0dip"
            android:text="推荐"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</merge>