<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical"
              android:orientation="vertical"
              android:layout_width="@dimen/home_popup_width"
              android:layout_height="wrap_content"
              xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/home_menu_user"
        android:background="?homeMenuPopupBgTop"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/home_menu_height">

        <com.clilystudio.app.netbook.ui.CircularSmartImageView
            android:id="@+id/home_menu_user_avatar"
            android:layout_width="21.0dip"
            android:layout_height="21.0dip"
            android:src="@drawable/home_menu_0"
            android:layout_centerVertical="true"/>

        <TextView
            android:textSize="@dimen/text_size_16"
            android:textColor="?android:textColor"
            android:id="@+id/home_menu_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="请登录"
            android:singleLine="true"
            android:layout_toRightOf="@id/home_menu_user_avatar"
            android:layout_centerVertical="true"/>

        <View
            android:background="?lineColor"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_menu_msg"
        android:background="?homeMenuPopupBgMid"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/home_menu_height">

        <ImageView
            android:id="@+id/icon_msg"
            android:layout_width="21.0dip"
            android:layout_height="21.0dip"
            android:src="@drawable/home_menu_1"
            android:layout_centerVertical="true"/>

        <TextView
            android:textSize="@dimen/text_size_16"
            android:textColor="?android:textColor"
            android:id="@+id/title_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="我的消息"
            android:layout_toRightOf="@id/icon_msg"
            android:layout_centerVertical="true"/>

        <TextView
            android:textSize="@dimen/text_size_13"
            android:textColor="#ffffffff"
            android:id="@+id/msg_count"
            android:background="@drawable/number_badge"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_toRightOf="@id/title_msg"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/msg_dot"
            android:background="@drawable/notification_red_dot"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <View
            android:background="?lineColor"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_menu_sync"
        android:background="?homeMenuPopupBgMid"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/home_menu_height">

        <ImageView
            android:id="@+id/icon_sync"
            android:layout_width="21.0dip"
            android:layout_height="21.0dip"
            android:src="@drawable/home_menu_2"
            android:layout_centerVertical="true"/>

        <TextView
            android:textSize="@dimen/text_size_16"
            android:textColor="?android:textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="同步书架"
            android:layout_toRightOf="@id/icon_sync"
            android:layout_centerVertical="true"/>

        <View
            android:background="?lineColor"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_menu_scan"
        android:background="?homeMenuPopupBgMid"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/home_menu_height">

        <ImageView
            android:id="@+id/icon_scan"
            android:layout_width="21.0dip"
            android:layout_height="21.0dip"
            android:src="@drawable/home_menu_3"
            android:layout_centerVertical="true"/>

        <TextView
            android:textSize="@dimen/text_size_16"
            android:textColor="?android:textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="扫描本地书籍"
            android:layout_toRightOf="@id/icon_scan"
            android:layout_centerVertical="true"/>

        <View
            android:background="?lineColor"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_menu_wifi_transfer"
        android:background="?homeMenuPopupBgMid"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/home_menu_height">

        <ImageView
            android:id="@+id/icon_wifi"
            android:layout_width="21.0dip"
            android:layout_height="21.0dip"
            android:src="@drawable/home_menu_4"
            android:layout_centerVertical="true"/>

        <TextView
            android:textSize="@dimen/text_size_16"
            android:textColor="?android:textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="WIFI 传书"
            android:layout_toRightOf="@id/icon_wifi"
            android:layout_centerVertical="true"/>

        <View
            android:background="?lineColor"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_menu_feedback"
        android:background="?homeMenuPopupBgMid"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/home_menu_height">

        <ImageView
            android:id="@+id/icon_feedback"
            android:layout_width="21.0dip"
            android:layout_height="21.0dip"
            android:src="@drawable/home_menu_5"
            android:layout_centerVertical="true"/>

        <TextView
            android:textSize="@dimen/text_size_16"
            android:textColor="?android:textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="意见反馈"
            android:layout_toRightOf="@id/icon_feedback"
            android:layout_centerVertical="true"/>

        <View
            android:background="?lineColor"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_menu_theme"
        android:background="?homeMenuPopupBgMid"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/home_menu_height">

        <ImageView
            android:id="@+id/icon_theme"
            android:layout_width="21.0dip"
            android:layout_height="21.0dip"
            android:src="@drawable/theme_night"
            android:layout_centerVertical="true"/>

        <TextView
            android:textSize="@dimen/text_size_16"
            android:textColor="?android:textColor"
            android:id="@+id/text_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="夜间模式"
            android:layout_toRightOf="@id/icon_theme"
            android:layout_centerVertical="true"/>

        <View
            android:background="?lineColor"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_menu_settings"
        android:background="?homeMenuPopupBgBottom"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/home_menu_height">

        <ImageView
            android:id="@+id/icon_settings"
            android:layout_width="21.0dip"
            android:layout_height="21.0dip"
            android:src="@drawable/home_menu_6"
            android:layout_centerVertical="true"/>

        <TextView
            android:textSize="@dimen/text_size_16"
            android:textColor="?android:textColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:text="设置"
            android:layout_toRightOf="@id/icon_settings"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>