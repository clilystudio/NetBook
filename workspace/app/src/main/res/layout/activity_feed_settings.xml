<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="@dimen/dp_25"
        android:background="#ffbebebe"/>

    <RelativeLayout
        android:id="@id/book_feed_set_chapter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_list_item_bg"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_10">

        <TextView
            android:id="@id/book_feed_set_chapter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="养肥章节数"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@id/book_feed_set_chapter_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_feed_set_chapter_title"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/bookshelf_time"
            android:textSize="@dimen/text_size_13"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#ffbebebe"/>
</LinearLayout>